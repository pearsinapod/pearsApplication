<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clipToPadding="false"
    android:outlineProvider="bounds"
    android:paddingLeft="40sp"
    android:paddingTop="20sp"
    android:paddingRight="40sp"
    android:paddingBottom="60sp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewExplore"
        android:layout_width="409dp"
        android:layout_height="585dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="120dp"
        android:elevation="3dp"
        android:background="@drawable/colorgroupicon"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="402dp"
            android:layout_height="599dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvExploreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_alternates"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="36sp"
                tools:text="hello" />

            <TextView
                android:id="@+id/tvExploreDescription"
                android:layout_width="397dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:fontFamily="@font/montserrat_alternates"
                android:paddingLeft="100sp"
                android:paddingBottom="50sp"
                android:text="hellooooooooooooo"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/ivExploreImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars[5]" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>